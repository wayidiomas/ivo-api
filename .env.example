# =============================================================================
# üöÄ APLICA√á√ÉO
# =============================================================================
APP_NAME="Curso Na Way - Gerador de Apostilas"
APP_VERSION="1.0.0"
APP_DESCRIPTION="Sistema de gera√ß√£o de apostilas de ingl√™s com IA"
APP_ENVIRONMENT="development"  # development, staging, production

# Server Configuration
HOST="0.0.0.0"
PORT=8000
DEBUG=true
RELOAD=true

# Security
SECRET_KEY="your-super-secret-key-here-change-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8080"
ALLOWED_METHODS="GET,POST,PUT,DELETE,PATCH"
ALLOWED_HEADERS="*"

# =============================================================================
# üóÑÔ∏è BANCO DE DADOS - SUPABASE
# =============================================================================
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-anon-key-here"
SUPABASE_SERVICE_KEY="your-service-role-key-here"

# Database Pool
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# =============================================================================
# üß† INTELIG√äNCIA ARTIFICIAL
# =============================================================================

# OpenAI (Principal) - Modelos 2025
OPENAI_API_KEY="sk-your-openai-key-here"

# Modelos por complexidade de tarefa
# Tarefas Simples (Baixo Custo)
OPENAI_MODEL_SIMPLE="gpt-4o-mini"  # Para RAG, an√°lise simples
OPENAI_MODEL_VISION="gpt-4o-mini"  # Para an√°lise de imagens (multimodal)

# Tarefas M√©dias (Balanceado)
OPENAI_MODEL_MEDIUM="gpt-5-mini"  # Vocabulary, Sentences
OPENAI_MODEL_REASONING_LITE="o3-mini"  # Tips, Grammar (racioc√≠nio pedag√≥gico)

# Tarefas Complexas (Alta Qualidade)
OPENAI_MODEL_COMPLEX="gpt-5"  # Unit generation, tarefas complexas
OPENAI_MODEL_REASONING="o3"  # Assessments, Q&A (racioc√≠nio profundo)

# Configura√ß√µes gerais
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7
OPENAI_REASONING_EFFORT="medium"  # low, medium, high (para modelos o3)

# LangChain
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY="your-langchain-api-key"
LANGCHAIN_PROJECT="curso-na-way"

# =============================================================================
# ‚ö° CACHE E PERFORMANCE
# =============================================================================

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""
REDIS_DB=0
REDIS_MAX_CONNECTIONS=10

# Cache TTL (Time To Live) em segundos
CACHE_VOCAB_TTL=3600        # 1 hora
CACHE_CONTENT_TTL=7200      # 2 horas
CACHE_PDF_TTL=86400         # 24 horas

# =============================================================================
# üìÅ ARMAZENAMENTO DE ARQUIVOS
# =============================================================================

# Local Storage Paths
UPLOAD_DIR="./data/images/uploads"
PROCESSED_DIR="./data/images/processed"
PDF_DIR="./data/pdfs/generated"
TEMP_DIR="./data/temp"
CACHE_DIR="./data/cache"

# File Size Limits (em bytes)
MAX_IMAGE_SIZE=10485760     # 10MB
MAX_IMAGES_PER_REQUEST=5
ALLOWED_IMAGE_TYPES="jpg,jpeg,png,webp"

# PDF Configuration
PDF_TEMPLATE_DIR="./data/templates"
PDF_MAX_SIZE=52428800       # 50MB

# =============================================================================
# üõ°Ô∏è SEGURAN√áA E RATE LIMITING
# =============================================================================

# Rate Limiting
RATE_LIMIT_VOCAB_GENERATION="10/minute"
RATE_LIMIT_CONTENT_GENERATION="5/minute"
RATE_LIMIT_PDF_GENERATION="3/minute"
RATE_LIMIT_UPLOAD="20/minute"

# JWT Configuration
JWT_SECRET_KEY="your-jwt-secret-key-different-from-app-secret"
JWT_ALGORITHM="HS256"
JWT_EXPIRE_MINUTES=1440     # 24 horas

# Password Hashing
BCRYPT_ROUNDS=12

# =============================================================================
# üìä LOGGING E MONITORAMENTO
# =============================================================================

# Logging
LOG_LEVEL="INFO"            # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT="json"           # json, text
LOG_FILE="./logs/app.log"
LOG_ROTATION="1 day"
LOG_RETENTION="30 days"

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# =============================================================================
